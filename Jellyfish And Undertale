#include<bits/stdc++.h>
 
#include <iostream>
using namespace std;
 
int main()
{
    int t;
    cin>>t;
    while(t--){
        int a, b, n;
        cin>>a>>b>>n;
            long long sum = b;
            
            for(int i = 0; i<n; i++){
                int x = 0;
                cin>>x;
                sum += min(a-1, x);
            }
            
            cout<<sum<<endl;
    }
}
